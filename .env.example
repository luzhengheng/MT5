# MT5-CRS 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ============= 数据源 API Keys =============
# EODHD API Key（主数据源）
EODHD_API_KEY=your_eodhd_api_key_here

# FRED API Key（宏观经济数据）
FRED_API_KEY=your_fred_api_key_here

# ============= Redis 配置 =============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============= Prometheus 配置 =============
PROMETHEUS_PORT=9090

# ============= 项目路径 =============
PROJECT_ROOT=/opt/mt5-crs
DATA_LAKE_PATH=/opt/mt5-crs/data_lake
MODEL_CACHE_PATH=/opt/mt5-crs/var/cache/models

# ============= 日志配置 =============
LOG_LEVEL=INFO
LOG_PATH=/opt/mt5-crs/var/logs

# ============= GPU 配置 =============
# 如果有 GPU，设置为 cuda；否则设置为 cpu
DEVICE=cpu

# ============= 调试模式 =============
DEBUG=false

# ============= MT5 Bridge 配置 (工单 #012) =============
# MT5 连接配置
MT5_HOST=172.19.141.255  # GTW 内网 IP (生产环境) 或 127.0.0.1 (本地开发 + SSH隧道)
MT5_PORT=5555            # ZMQ REQ端口

# MT5 订单配置 (Gemini P1 修复)
MT5_MAGIC_NUMBER=123456         # 魔法数字 (默认值)
MT5_STRATEGY_MAGIC_BASE=120000  # 策略魔法数字基数 (可选)

# MT5 超时配置
MT5_ORDER_TIMEOUT=10.0    # 订单执行超时 (秒)
MT5_INQUIRY_TIMEOUT=5.0   # 订单查询超时 (秒)

# MT5 重试配置
MT5_MAX_RETRIES=3        # 最大重试次数
MT5_RETRY_DELAY=1.0      # 重试延迟 (秒)
